#!/usr/bin/env nix-shell
#! nix-shell -i bash -p python38Packages.notify2 python38Packages.dbus-python python38 mosh

set -euo pipefail

cd "${HOME}/tools/weelisten" || exit 1
python3 client.py jassob.se "$(pass apps/weechat | tail -n +3 | cut -f 3 -d ' ')" -p 8001 &
IP=$(ping -c 1 192.168.1.72 >/dev/null && echo 192.168.1.72 || echo nuc)
mosh ${IP} tmux a
trap 'kill $(jobs -p)' EXIT
