#
# multimedia keys
#
# sound
XF86AudioLowerVolume
        amixer set Master 5%-

XF86AudioRaiseVolume
        amixer set Master 5%+

XF86AudioMute
        amixer set Master toggle

# brightness
XF86MonBrightnessUp
        xbacklight -inc 5

XF86MonBrightnessDown
        xbacklight -dec 5

# ctrl + z ; ctrl + g
#         xte 'key Escape'

#
# wm independent hotkeys
#

# terminal emulator
ctrl + z ; ctrl + c
	urxvt

# dmenu
ctrl + z ; ctrl + d
	dmenu_run

# search the web with google
super + g
        dmenu-google-script

# open url
ctrl + z ; b
       dmenu-open-url

# lock screen with lock script
ctrl + z ; ctrl + l
       lock

# screenshot of current window
ctrl + z ; alt + p
       scrot -u -e 'mv $f ~/Pictures/screenshots/'

# screenshot of desktop
ctrl + z ; ctrl + p
       exec import -window root png:$HOME/Pictures/screenshots/screenshot_$(date +%F_%H-%M-%S).png

# Some quick stuff
super + t
        conkeror http://toggl.com/app

super + s
        conkeror http://teapartychs.slack.com

super + c
        conkeror http://google.com/calendar

super + m
        conkeror http://messenger.com

super + i
        conkeror http://inbox.google.com

super + e
        emacsclient -c

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# Media keys
#
XF86AudioRaiseVolume
    $HOME/.config/bspwm/panel/notify_volume + 3
XF86AudioLowerVolume
    $HOME/.config/bspwm/panel/notify_volume - 3
XF86AudioMute
    $HOME/.config/bspwm/panel/notify_volume !
