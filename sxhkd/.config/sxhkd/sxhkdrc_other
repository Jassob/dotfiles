#
# multimedia keys
#
# sound
XF86AudioLowerVolume
     amixer set Master 5%-

XF86AudioRaiseVolume
     amixer set Master 5%+

XF86AudioMute
     amixer set Master toggle

# brightness
XF86MonBrightnessUp
     xbacklight +5%

XF86MonBrightnessDown
     xbacklight -5%

# ctrl + z ; ctrl + g
#         xte 'key Escape'

#
# wm independent hotkeys
#

# dmenu
ctrl + z ; ctrl + d
     dmenu_run

# search the web with google
super + g
      dmenu-google-script

# open url
ctrl + z ; b
      dmenu-open-url

# lock screen with lock script
ctrl + z ; ctrl + l
      lock

# screenshot of current window
ctrl + z ; alt + p
      scrot -u -e 'mv $f ~/pictures/screenshots/'

# screenshot of desktop
ctrl + z ; ctrl + p
      exec import -window root png:$HOME/pictures/screenshots/screenshot_$(date +%F_%H-%M-%S).png

# Org-capture with emacsclient
ctrl + z ; ctrl + o
     emacsclient -c -e "(org-capture)"

# Some quick stuff
ctrl + z ; ctrl + s
      xdg-open https://teapartychs.slack.com

ctrl + z ; ctrl + c
      xdg-open https://google.com/calendar

ctrl + z ; ctrl + m
      xdg-open https://messenger.com

ctrl + z ; ctrl + i
      xdg-open https://inbox.google.com

ctrl + z ; ctrl + e
      startemacs

ctrl + z ; ctrl + t
     xdg-open https://www.telegram.org/dl/webogram

# make sxhkd reload its configuration files:
super + Escape
      pkill -USR1 -x sxhkd
