#
# multimedia keys
#
# sound
XF86AudioLowerVolume
        amixer set Master 5%-

XF86AudioRaiseVolume
        amixer set Master 5%+

XF86AudioMute
        amixer set Master toggle

# brightness
XF86MonBrightnessUp
        xbacklight -inc 5

XF86MonBrightnessDown
        xbacklight -dec 5

ctrl + z ; ctrl + g
        xte 'key Escape'

#
# wm independent hotkeys
#

# terminal emulator
ctrl + z ; ctrl + c
	urxvt

# dmenu
ctrl + z ; ctrl + d
	dmenu_run

# search the web with google
super + g
        dmenu-google-script

# open url
ctrl + z ; b
       dmenu-open-url

# lock screen with lock script
ctrl + z ; ctrl + l
       lock

# screenshot of current window
ctrl + z ; alt + p
       scrot -u -e 'mv $f ~/Pictures/screenshots/'

# screenshot of desktop
ctrl + z ; ctrl + p
       exec import -window root png:$HOME/Pictures/screenshots/screenshot_$(date +%F_%H-%M-%S).png

# Some quick stuff
super + t
        conkeror http://toggl.com/app

super + s
        conkeror http://teapartychs.slack.com

super + c
        conkeror http://google.com/calendar

super + m
        conkeror http://messenger.com

super + i
        conkeror http://inbox.google.com

super + e
        emacsclient -c

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit bspwm normally
super + alt + Escape
	bspc quit

# close and kill
ctrl + z ; {_, shift + }ctrl + k
	bspc node -{c,k}

# alternate between the tiled and monocle layout
ctrl + z ; ctrl + m
	bspc desktop -l next

# if the current node is automatic, send it to the last manual,
# otherwise pull the last leaf
ctrl + z ; y
	bspc query -N -n focused.automatic && bspc node -n last.!automatic || \
        bspc node last.leaf -n focused

# swap the current node and the biggest node
ctrl + z ; g
	bspc node -s biggest

#
# state/flags
#

# set the window state
ctrl + z ; s ; {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
ctrl + z ; + ctrl + {x,y,z}
	bspc node -g {locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
ctrl + z ; ctrl + {p,b,f,s}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node
ctrl + z ; {_,shift + }o
	bspc node -f {next,prev}

# focus the next/previous desktop
super + bracket{left,right}
	bspc desktop -f {prev,next}

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
ctrl + z ; c ; {Left,Down,Up,Right}
        bspc node -p {west,south,north,east}

# preselect the ratio
ctrl + z ; c ; {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
ctrl + z ; c ; ctrl + g
	bspc node -p cancel

# cancel the preselection for the focused desktop
ctrl + z ; c ; ctrl + shift + g
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# resize tiled/floating
#

# expand the tiled space in the given direction
ctrl + z ; e : {Left,Down,Up,Right}
	bspc node {@west -r -10,@south -r +10,@north -r -10,@east -r +10}

# contract the tiled space in the given direction
ctrl + z ; q : {Left,Down,Up,Right}
	bspc node {@east -r -10,@north -r +10,@south -r -10,@west -r +10}

# move a floating window
ctrl + z ; m : {Left,Down,Up,Right}
	xdo move {-x -20,-y +20,-y -20,-x +20}

#
# pointer focus
#

# focus
~button1
	bspc pointer -g focus

#
# Media keys
#
XF86AudioRaiseVolume
    $HOME/.config/bspwm/panel/notify_volume + 3
XF86AudioLowerVolume
    $HOME/.config/bspwm/panel/notify_volume - 3
XF86AudioMute
    $HOME/.config/bspwm/panel/notify_volume !
