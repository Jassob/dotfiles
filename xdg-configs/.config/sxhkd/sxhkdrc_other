#######
# multimedia keys
#######
XF86AudioLowerVolume
     amixer set Master 5%-

XF86AudioRaiseVolume
     amixer set Master 5%+

XF86AudioMute
     amixer set Master toggle

XF86MonBrightnessUp
     xbacklight +5%

XF86MonBrightnessDown
     xbacklight -5%

super + r
	 rofi -show drun

ctrl + z ; ctrl + d
     rofi -show drun

#######
# Launching stuff
#######
ctrl + z ; l ; p
	  rofi-pass

ctrl + z ; l ; ctrl + a
     emacsclient -c -e "(org-capture)"

ctrl + z ; l ; e
      $HOME/.local/bin/startemacs

#######
# System stuff
#######
ctrl + z ; x ; l
      dm-tool lock

ctrl + z ; x ; p
      scrot -u -e 'mv $f ~/pictures/screenshots/'

ctrl + z ; x ; P
      exec import -window root png:$HOME/pictures/screenshots/screenshot_$(date +%F_%H-%M-%S).png

#######
# Web
#######
super + g
      $HOME/.local/bin/dmenu-google-script

ctrl + z ; w ; g
      $HOME/.local/bin/dmenu-google-script

super + b
      $HOME/.local/bin/dmenu-open-url

ctrl + z ; w ; b
      $HOME/.local/bin/dmenu-open-url

ctrl + z ; w ; c
      xdg-open https://google.com/calendar

ctrl + z ; w ; m
      xdg-open https://messenger.com

ctrl + z ; w ; i
      xdg-open https://inbox.google.com

ctrl + z ; w ; t
     xdg-open https://www.telegram.org/dl/webogram

# make sxhkd reload its configuration files:
super + Escape
      pkill -USR1 -x sxhkd
