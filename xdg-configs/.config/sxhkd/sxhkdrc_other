#######
# Multimedia keys
#######
{XF86AudioLowerVolume, ctrl + F11}
     pulsemixer --change-volume -5

{XF86AudioRaiseVolume, ctrl + F12}
     pulsemixer --change-volume +5

{XF86AudioMute, ctrl + F10}
     pulsemixer --toggle-mute

{XF86MonBrightnessUp, ctrl + F6}
     light -A 5

{XF86MonBrightnessDown, ctrl + F5}
     light -U 5

XF86AudioPause
     playerctl pause

XF86AudioPlay
     playerctl play

super + x; o
     rofi -show drun

#######
# Launching stuff
#######
super + p
     rofi-pass

super + x ; e ; c
      emacsclient -c -e "(org-capture)"

super + e
      $HOME/.local/bin/startemacs

#######
# System stuff
#######
super + x ; l
      i3lock

super + x ; p
      scrot -u -e 'mv $f ~/pictures/screenshots/'

super + x ; P
      exec import -window root png:$HOME/pictures/screenshots/screenshot_$(date +%F_%H-%M-%S).png

#######
# Web
#######
{super + g, super + x ; s ; d}
      prompt-search -s duckduckgo

super + x ; s ; g
      prompt-search -s google

super + x ; s ; h
      prompt-search -s hoogle

super + x ; s ; p
      prompt-search -s hackage

{super + b, super + x ; w ; b}
      prompt-open-url

super + x ; w ; c
      xdg-open https://google.com/calendar

super + x ; w ; m
      xdg-open https://messenger.com

super + x ; w ; i
      xdg-open https://inbox.google.com

super + x ; w ; t
     xdg-open https://www.telegram.org/dl/webogram

# make sxhkd reload its configuration files:
super + Escape
      pkill -USR1 -x sxhkd
